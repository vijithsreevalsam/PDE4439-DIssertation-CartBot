<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" xmlns:gz="http://gazebosim.org/schema">
  <xacro:macro name="mecanum_wheel" params="side radius width pos_x pos_y pos_z mass mesh_file">
    <link name="${side}_wheel_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <xacro:if value="${mesh_file == ''}">
            <cylinder radius="${radius}" length="${width}"/>
          </xacro:if>
          <xacro:unless value="${mesh_file == ''}">
            <mesh filename="${mesh_file}" scale="1 1 1"/>
          </xacro:unless>
        </geometry>
        <material name="blue">
            <color rgba="0.1764 0.4588 0.8509 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <inertia ixx="${(2/5) * mass * (radius * radius)}" ixy="0" ixz="0"
                 iyy="${(2/5) * mass * (radius * radius)}" iyz="0"
                 izz="${(2/5) * mass * (radius * radius)}" />
      </inertial>
    </link>

    <gazebo reference="${side}_wheel_link">
      <collision>
        <surface>
          <friction>
            <ode>
              <mu>1.5</mu>
              <mu2>0.7</mu2>
              <kp>200000.0</kp>
              <kd>5000.0</kd>
              <xacro:if value="${side == 'front_left'}">
                <fdir1 gz:expressed_in="base_footprint">1 -1 0</fdir1>
              </xacro:if>
              <xacro:if value="${side == 'rear_left'}">
                <fdir1 gz:expressed_in="base_footprint">1 1 0</fdir1>
              </xacro:if>
              <xacro:if value="${side == 'front_right'}">
                <fdir1 gz:expressed_in="base_footprint">1 1 0</fdir1>
              </xacro:if>
              <xacro:if value="${side == 'rear_right'}">
                <fdir1 gz:expressed_in="base_footprint">1 -1 0</fdir1>
              </xacro:if>
            </ode>
          </friction>
        </surface>
      </collision>
    </gazebo>

    <gazebo reference="${side}_wheel_link">  
      <visual>  
        <material>
          <ambient>0.1764 0.4588 0.8509 1.0</ambient>  
          <diffuse>0.1764 0.4588 0.8509 1.0</diffuse>  
          <specular>0.1764 0.4588 0.8509 1.0</specular>  
          <emissive>0.0 0.0 0.0 0.0</emissive>  
        </material>
      </visual>  
    </gazebo>
    <joint name="${side}_wheel_joint" type="continuous">
      <axis xyz="0 1 0" />
      <parent link="base_link"/>
      <child link="${side}_wheel_link"/>
      <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>